{
  "compileOnSave": false,
  "compilerOptions": {
      "outDir": "./lib/",
      "sourceMap": true,
      "noImplicitAny": true,
      "preserveConstEnums": true,
      "module": "es2015",
      "target": "es5",
      "jsx": "react",
  },
  "awesomeTypescriptLoaderOptions": {
    "transpileOnly": true //设置为 true 可以提高编译速度
  },
  "exclude": [
    "./node_modules/",
    "./build/",
    "./config/",
    "./dist/",
  ],
  "include": [
    "./src/index.tsx",
    "."
  ]
}